//const chord_prog = "<f2 c2 g2 g2>"

setCpm(144/4) // 144 cycles in a minute, 4 beats in a cycle

const drums1 = s("bd*4, [<- [bd -]*2> sd]*2, hh:3*8, casio:1").hpf(200)
const drums2 = s("[bd, hh] hh [sd, hh] hh")

const chords = note("[[f4, a4, c5] [g4, c5, e5] [g4, b4, d4] -]/4").s("piano")
const bass = note("<f2 c2 g2 g2>").s("saw").lpf(4000).gain(1.2)._scope({color:'blue'})
const click = s("[casio:3 casio:1 casio:1 casio:1]").gain(.5).color
//const hat = s()

$: stack(
  click,
  drums1,
  chords,
  bass,
  //drums2,
)._punchcard({
  vertical:0}
)


